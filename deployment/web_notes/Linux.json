        "make: Build automation tool",
        "git: Version control system",
        "vim: Text editor",
        "nano: Simple text editor",
        "emacs: Advanced text editor",
        "valgrind: Memory debugging tool",
        "strace: System call tracer",
        "tcpdump: Network packet analyzer"
